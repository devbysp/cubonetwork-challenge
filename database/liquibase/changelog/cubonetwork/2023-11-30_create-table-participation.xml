<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

<changeSet id="create_table_participation" author="devbysp">
  <createTable tableName="participation">
    <column name="id" type="INT" autoIncrement="true">
      <constraints primaryKey="true" nullable="false"/>
    </column>

    <column name="first_name" type="VARCHAR(40)">
      <constraints nullable="false"/>
    </column>

    <column name="last_name" type="VARCHAR(40)">
      <constraints nullable="false"/>
    </column>

    <column name="participation" type="FLOAT">
      <constraints nullable="false"/>
    </column>
  </createTable>

  <addUniqueConstraint
    constraintName="bk_person"
    tableName="participation"
    columnNames="first_name, last_name"/>

  <rollback>
    <dropTable tableName="participation"/>
  </rollback>
</changeSet>

</databaseChangeLog>
